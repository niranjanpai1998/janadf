										}
									},
									"inputs": [
										{
											"referenceName": "SqlServerTableCpyForEach",
											"type": "DatasetReference"
										}
									],
									"outputs": [
										{
											"referenceName": "AzureSqlTable1",
											"type": "DatasetReference"
										}
									]
								}
							]
						}
					}
